{
  "name": "@ketch-com/ketch-react-native",
  "version": "0.6.9",
  "description": "Ketch React Native Library",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "lib/module/index",
  "source": "src/index",
  "files": [
    "package.json",
    "react-native.config.js",
    "tsconfig.json",
    "src",
    "lib"
  ],
  "scripts": {
    "all": "npm run clean && npm run lint && npm run typecheck && npm run prepare",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "lint-fix": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ketch-com/ketch-react-native.git"
  },
  "author": "Justin Boileau <justin.boileau@ketch.com> (https://www.ketch.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ketch-com/ketch-react-native/issues"
  },
  "homepage": "https://github.com/ketch-com/ketch-react-native#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "0.79.0",
    "@react-native/eslint-config": "0.79.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.11.30",
    "@types/react": "19.0.0",
    "@types/react-native": "^0.73.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "expo-shared-preferences": "0.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "react": "19.0.0",
    "react-native": "0.79.0",
    "react-native-builder-bob": "^0.23.2",
    "react-native-default-preference": "^1.4.4",
    "react-native-webview": "~13.8.4",
    "release-it": "^17.1.1",
    "typescript": "5.4.3"
  },
  "peerDependencies": {
    "expo-shared-preferences": ">=0.4.0",
    "react": ">=18.2.0",
    "react-native": ">=0.71.0",
    "react-native-default-preference": ">=1.4.4",
    "react-native-webview": ">=13.8.4"
  },
  "peerDependenciesMeta": {
    "expo-shared-preferences": {
      "optional": true
    }
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "packageManager": "yarn@4.1.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "overrides": {
    "form-data": "^4.0.4",
    "brace-expansion": "^2.0.2"
  }
}
